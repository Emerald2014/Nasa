<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nasa" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/red_500</item>
        <item name="android:navigationBarColor">@color/red_500</item>
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/red_100</item>
        <item name="colorOnPrimaryContainer">@color/red_900</item>
        <item name="colorPrimaryInverse">@color/red_200</item>
        <item name="colorSecondary">@color/red_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/red_100</item>
        <item name="colorOnSecondaryContainer">@color/red_900</item>
        <item name="colorTertiary">@color/red_600</item>
        <item name="colorOnTertiary">#712323</item>
        <item name="colorTertiaryContainer">@color/red_100</item>
        <item name="colorOnTertiaryContainer">@color/red_900</item>

        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
    </style>
//Зеленая тема
    <style name="ThemeNasaGreen" parent="Theme.Nasa">
        <item name="android:statusBarColor">@color/green_500</item>
        <item name="colorPrimary">@color/green_600</item>
        <item name="android:navigationBarColor">@color/green_500</item>
        <item name="colorSecondary">@color/green_600</item>

        <item name="tabStyle">@style/tabsLayout</item>
<item name="android:fontFamily">@font/lobster</item>

        <item name="bottomAppBarStyle">@style/bottomNavigationGreen</item>
        <item name="floatingActionButtonStyle">@style/FABGreen</item>
    </style>
//Оранжевая тема
    <style name="ThemeNasaOrange" parent="Theme.Nasa">
        <item name="android:statusBarColor">@color/orange_500</item>
        <item name="colorPrimary">@color/orange_300</item>
        <item name="android:navigationBarColor">@color/orange_400</item>
        <item name="colorSecondary">@color/orange_600</item>
        <item name="android:fontFamily">@font/aladin</item>


        <item name="bottomAppBarStyle">@style/bottomNavigationOrange</item>
        <item name="floatingActionButtonStyle">@style/FABOrange</item>
    </style>

    <style name="tabsLayout" parent="Widget.MaterialComponents.TabLayout">


    </style>

    <style name="bottomNavigationGreen" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">@color/green_800</item>
    </style>
    <style name="bottomNavigationOrange" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">@color/orange_700</item>
    </style>
    <style name="FABGreen" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/green_900</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="FABOrange" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/orange_800</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="myFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#FF0C59FB</item>
    </style>

    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/red_600</item>
    </style>

</resources>